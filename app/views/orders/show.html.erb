<% provide(:title, "Order details") %>

<h1>Order details</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <ol class="orders">
      <span class="order_id">
        <%= link_to "Order No. #{@order.id}", @order %></span>
      <span class="order_info">
      Total: Â¥<%= sum(@order) %></span>
    </ol>
    <ol class="products">
      <%= render @order.details %>
    </ol>
    <ol class="orders">
      <span class="order_send_to">
      Send to: <%= @order.code %></span>
      <span class="order_send_to">
      <%= @order.address %></span>

    <span class="timestamp">
      Ordered <%= time_ago_in_words(@order.ordered_at) %> ago.
    </span>
    <span class="timestamp">
        <%= link_to "Change", edit_order_path(@order) %>
        <%= link_to "Cancel", "/orders/#{params[:id]}/cancel" %>
    </span>
    </ol>

  </div>
</div>
