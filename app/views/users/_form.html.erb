<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "Name", class: 'form-control' %>

  <%= f.label :real_name %>
  <%= f.text_field :real_name, placeholder: "Real name", class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, placeholder: "Email", class: 'form-control' %>

  <%= f.label :gender %>
  <%= f.select :gender, [["", ""], ["Male", "Male"], ["Female", "Female"], ["No Answer", "No Answer"]], class: 'form-control' %>

  <%= f.label :birthdate %>
  <%= f.text_field :birthdate, placeholder: "yyyy-mm-dd", class: 'form-control' %>

  <%= f.label :code %>
  <%= f.text_field :code, placeholder: "xxx-xxxx", class: 'form-control' %>

  <%= f.label :address %>
  <%= f.text_field :address, placeholder: "Address", class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, placeholder: "Password", class: 'form-control' %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation, placeholder: "Confirmation", class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
