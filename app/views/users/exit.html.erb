<% provide(:title, 'Exit') %>
<h1>Exit Taniiiiim</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, method: :delete, data: { confirm: "You sure?" }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Email", class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password", class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, placeholder: "Confirmation", class: 'form-control' %>

      <%= f.submit "Exit Taniiiiim", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
